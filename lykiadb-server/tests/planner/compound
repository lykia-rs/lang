#[name=simple_union, run=plan]>

SELECT * FROM books
UNION
SELECT * FROM books;

---

- compound [type=Union]
  - scan [books as books]
  - scan [books as books]

#[name=simple_intersect, run=plan]>

SELECT * FROM books
INTERSECT
SELECT * FROM books;

---

- compound [type=Intersect]
  - scan [books as books]
  - scan [books as books]


#[name=simple_except, run=plan]>

SELECT * FROM books
EXCEPT
SELECT * FROM books;

---

- compound [type=Except]
  - scan [books as books]
  - scan [books as books]


#[name=nested, run=plan]>

SELECT * FROM books where id > 5
UNION
SELECT * FROM books
INTERSECT
SELECT * FROM books
EXCEPT
SELECT * FROM books;

---

- compound [type=Union]
  - filter [(id Greater Num(5.0))]
    - scan [books as books]
  - compound [type=Intersect]
    - scan [books as books]
    - compound [type=Except]
      - scan [books as books]
      - scan [books as books]

#[name=with_projection, run=plan]>

SELECT id FROM books where id > 5
UNION
SELECT title FROM books;

---
- compound [type=Union]
  - project [id as id]
    - filter [(id Greater Num(5.0))]
      - scan [books as books]
  - project [title as title]
    - scan [books as books]